import java.util.concurrent.ScheduledExecutorService;
import java.util.concurrent.ScheduledFuture;
import java.util.concurrent.TimeUnit;

public class QuestionActivity extends AppCompatActivity {

    ScheduledFuture<?> scheduledFuture;
    private TextView question, next, share;
    private LinearLayout optionsLayout;
    private int count = 0;
    private List<QuestionAdapter> questionList;
    private Button A, B, C, D;
    private int position = 0;
    InterstitialAd interstitialAd;
    FirebaseDatabase firebaseDatabase;
    DatabaseReference databaseReference;
    private ProgressDialog progressDialog;

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_question);

        if (!isOnline()) {
            return;
        }

        interstitialAd = new InterstitialAd(this);
        interstitialAd.setAdUnitId(getString(R.string.question_inter_ad_id));
        interstitialAd.loadAd(new AdRequest.Builder().build());

        progressDialog = new ProgressDialog(this);
        progressDialog.setTitle("Please Wait...");
        progressDialog.setMessage("Loading..");
        progressDialog.setCancelable(false);
        progressDialog.show();
        firebaseDatabase = FirebaseDatabase.getInstance();
        databaseReference = firebaseDatabase.getReference();
        question = findViewById(R.id.question);
        next = findViewById(R.id.next_button);
        share = findViewById(R.id.share);
        A = findViewById(R.id.A);
        B = findViewById(R.id.B);
        C = findViewById(R.id.C);
        D = findViewById(R.id.D);
        optionsLayout = findViewById(R.id.optionsLayout);

        Intent i = getIntent();
        String cataegory = i.getStringExtra("category");

        if(cataegory.equals("history")){
            getSupportActionBar().setTitle("History Questions");
        }
        if(cataegory.equals("geo")){
            getSupportActionBar().setTitle("Geography Questions");
        }
        if(cataegory.equals("env")){
            getSupportActionBar().setTitle("Environment Questions");
        }
        if (cataegory.equals("economy")) {
            getSupportActionBar().setTitle("Economy Questions");
        }
        if (cataegory.equals("science")) {
            getSupportActionBar().setTitle("Science Questions");
        }
        if (cataegory.equals("csat")) {
            getSupportActionBar().setTitle("C-SAT Questions");
        }
        if (cataegory.equals("rajyaGh")) {
            getSupportActionBar().setTitle("Rajya Ghatana Questions");
        }

        questionList = new ArrayList<>();
        databaseReference.child("categories").child(cataegory).addListenerForSingleValueEvent(new ValueEventListener() {
            @Override
            public void onDataChange(@NonNull DataSnapshot dataSnapshot) {
                for (DataSnapshot snapshot : dataSnapshot.getChildren()) {
                    try {
                        questionList.add(snapshot.getValue(QuestionAdapter.class));
                    } catch (DatabaseException ex) {
                        Toast.makeText(QuestionActivity.this, ex.getMessage(), Toast.LENGTH_SHORT).show();
                    }
                }
                if (questionList.size() > 0) {
                    for (int i = 0; i < 4; i++) {
                        optionsLayout.getChildAt(i).setOnClickListener(new View.OnClickListener() {
                            @Override
                            public void onClick(View v) {
                                checkAns((Button) v);
                            }
                        });
                    }
                    progressDialog.dismiss();
                    playAnim(question, 0, position + 1 + "). " + questionList.get(position).getQuestion());
                    next.setOnClickListener(new View.OnClickListener() {
                        @Override
                        public void onClick(View v) {
                            next.setEnabled(false);
                            next.setAlpha(0.7f);
                            enableOption(true);
                            position++;
                            if (position == questionList.size()) {
                                Toast.makeText(getApplicationContext(), "END", Toast.LENGTH_LONG).show();
                                enableOption(false);
                                return;
                            }
                            count = 0;
                            playAnim(question, 0, position + 1 + "). " + questionList.get(position).getQuestion());
                        }
                    });

                }
                else{
                    finish();
                    Toast.makeText(getApplicationContext(), "No Questions Available", Toast.LENGTH_SHORT).show();
                }
            }

            @Override
            public void onCancelled(@NonNull DatabaseError databaseError) {
                Toast.makeText(QuestionActivity.this, databaseError.getMessage(), Toast.LENGTH_SHORT).show();
            }
        });

        share.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View v) {
                String shareMsg = questionList.get(position).getQuestion() + "\n\n" + "A. " + questionList.get(position).getOptionA() + "\nB. " + questionList.get(position).getOptionB() + "\nC. " + questionList.get(position).getOptionC() + "\nD. " + questionList.get(position).getOptionD() + "\n\nHey check out my app at: https://play.google.com/store/apps/details?id=" + BuildConfig.APPLICATION_ID;
                Intent shareIntent = new Intent();
                shareIntent.setAction(Intent.ACTION_SEND);
                shareIntent.putExtra(Intent.EXTRA_TEXT, shareMsg);
                shareIntent.setType("text/plain");
                startActivity(shareIntent);
            }
        });
    }

    @Override
    public void onBackPressed() {
        super.onBackPressed();
        try {
            if (interstitialAd.isLoaded()) {
                interstitialAd.show();
            }
        } catch (Exception ex) {
            finish();
        }
    }

    private void playAnim(final View view, final int value, final String data) {
        view.animate().alpha(value).scaleX(value).scaleY(value).setDuration(500).setStartDelay(100).setInterpolator(new DecelerateInterpolator()).setListener(new Animator