<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Bus">

    <RelativeLayout
        android:id="@+id/heading"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:background="@drawable/gradient_2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/secular_one"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/app_name1"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/top_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/heading"
        android:fontFamily="@font/secular_one"
        android:gravity="center"
        android:padding="20dp"
        android:text="* सोलापूर बस स्थानकाचे वेळापत्रक *"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top_heading">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/secular_one"
                android:padding="12dp"
                android:text="*अक्कलकोट, पंढरपूर, तुळजापूर, मंगळवेढा येथे जाण्यासाठी १५ मिनिटाच्या अंतराने तर पुणे, मुंबईसाठी दर अर्ध्या तासाने बस उपलब्ध आहे"
                android:textColor="@color/colorSecondaryDark"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/note"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:background="@color/colorSecondaryDark" />

            <TextView
                android:id="@+id/station_nagar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/note"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:fontFamily="@font/secular_one"
                android:text="अहमदनगर"
                android:textColor="@color/colorSecondaryDark"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/nagar_times"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/station_nagar"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/secular_one"
                android:gravity="center"
                android:padding="5dp"
                android:text="\t\t08:00\t\t\t\t13:00\t\t\t\t15:00\t\t\t\t16:30\t\t\t\t21:00\t\t\t\t23:30\t\t"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/nagar_times"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:background="@color/colorSecondaryDark" />

            <TextView
                android:id="@+id/station_ahmadpur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nagar_times"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:fontFamily="@font/secular_one"
                android:text="अहमदपूर"
                android:textColor="@color/colorSecondaryDark"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ahmdpur_times"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/station_ahmadpur"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/secular_one"
                android:gravity="center"
                android:padding="5dp"
                android:text="\t\t12:45\t\t\t\t13:30\t\t\t\t15:15\t\t\t\t16:45\t\t"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/ahmdpur_times"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:background="@color/colorSecondaryDark" />

            <TextView
                android:id="@+id/station_akluj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ahmdpur_times"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:fontFamily="@font/secular_one"
                android:text="अकलूज"
                android:textColor="@color/colorSecondaryDark"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/akluj_times"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/station_akluj"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/secular_one"
                android:gravity="center"
                android:padding="5dp"
                android:text="\t\t06:15\t\t\t\t08:30\t\t\t\t10:30\t\t\t\t12:00\t\t\t\t13:30\t\t\t\t14:00\t\t\n\n\t\t14:30\t\t\t\t15:15\t\t\t\t15:30\t\t\t\t16:30\t\t\t\t18:00\t\t\t\t19:30\t\t"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="14sp" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>